{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./src/api/*"],
      "@/db/*": ["./src/api/db/*"],
      "@/routes/*": ["./src/api/routes/*"],
      "@/helpers/*": ["./src/api/helpers/*"],
      "@/services/*": ["./src/api/services/*"],
      "@/enum/*": ["./src/api/helpers/enum/*"],
      "@/utils/*": ["./src/api/helpers/utils/*"],
      "@/config/*": ["./src/api/helpers/config/*"],
      "@/schemas/*": ["./src/api/helpers/schemas/*"],
      "@/controllers/*": ["./src/api/controllers/*"],
      "@/interfaces/*": ["./src/api/helpers/interfaces/*"],
      "@/decorators/*": ["./src/api/helpers/decorators/*"],
      "@/middlewares/*": ["./src/api/helpers/middlewares/*"]
    }
  },
  "ts-node": {
    "complierOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src/**/*.ts", "/src/types/**/*.d.ts"],
  "exclude": ["node_modules", "package.json"]
}